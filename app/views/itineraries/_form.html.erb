<%= form_for(itinerary) do |f| %>
  <% if itinerary.errors.any? %>
    <div class="callout alert" data-closable>
      <h5><%= pluralize(itinerary.errors.count, "error") %> prohibited this itinerary from being saved:</h5>
      <ul>
        <% itinerary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :start_date %>
      <%= f.text_field :start_date, class:"datepicker", placeholder: "yyyy-mm-dd"  %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :end_date %>
      <%= f.text_field :end_date, class:"datepicker", placeholder: "yyyy-mm-dd"  %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.submit "Save", class: "button primary" %>
    </div>
  </div>

  </script>
<% end %>
