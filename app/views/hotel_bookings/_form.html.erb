<%= form_for([itinerary, hotel_booking]) do |f| %>
  <% if hotel_booking.errors.any? %>
    <div class="callout alert" data-closable>
      <h5><%= pluralize(hotel_booking.errors.count, "error") %> prohibited this itinerary from being saved:</h5>
      <ul>
        <% hotel_booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :location_name %>
      <%= f.text_field :location_name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :confirmation_number %>
      <%= f.text_field :confirmation_number %>
    </div>
  </div>

  <div class="row">
    <div class="medium-3 columns">
      <%= f.label :arrival_date %>
      <%= f.text_field :arrival_date, class:"datepicker", placeholder: "yyyy-mm-dd"  %>
    </div>
  </div>

  <div class="row">
    <div class="medium-3 columns">
      <%= f.label :arrival_time %>
      <%= f.text_field :arrival_time, placeholder: "HH:MM AM/PM" %>
    </div>
  </div>

  <div class="row">
    <div class="medium-3 columns">
      <%= f.label :departure_date %>
      <%= f.text_field :departure_date, class:"datepicker", placeholder: "yyyy-mm-dd"  %>
    </div>
  </div>

  <div class="row">
    <div class="medium-3 columns">
      <%= f.label :departure_time %>
      <%= f.text_field :departure_time, placeholder: "HH:MM AM/PM" %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.label :note %>
      <%= f.text_area :note %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns">
      <%= f.submit "Save", class: "button primary" %>
    </div>
  </div>

  </script>
<% end %>
